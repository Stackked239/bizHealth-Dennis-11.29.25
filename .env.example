# ============================================================================
# BizHealth Report Pipeline - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in the values.

# ============================================================================
# BETA TESTING CONFIGURATION
# ============================================================================

# BETA_DISABLE_REPORT_BLUR
# Controls clickwrap/blur protection on generated reports
#
# !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
# WARNING: INTERNAL BETA ONLY - Do not enable in production environments!
# !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
#
# Values:
#   true  = Bypass clickwrap modal, disable content blur (for internal QA)
#   false = Full legal protection active (PRODUCTION DEFAULT)
#
# When enabled in Beta mode:
#   - Reports render without clickwrap modal gating
#   - Content is fully visible without blur overlay
#   - Red "INTERNAL BETA - NOT FOR CLIENT DISTRIBUTION" banner is displayed
#   - Report metadata includes betaMode=true for audit trail
#
# Safety Guardrails:
#   - Warning is logged at startup if enabled in production (NODE_ENV=production)
#   - Beta banner prevents accidental client distribution
#   - All legal infrastructure is preserved and can be reactivated instantly
#
# To reactivate legal protection: Set to 'false' and regenerate reports
#
BETA_DISABLE_REPORT_BLUR=false

# ============================================================================
# ANTHROPIC API CONFIGURATION
# ============================================================================

# Your Anthropic API key (required)
ANTHROPIC_API_KEY=sk-ant-...

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL connection string (optional - for production deployments)
# DATABASE_URL=postgresql://user:password@localhost:5432/bizhealth

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# Enable debug logging for reference logger
DEBUG_REFERENCE_LOGGER=false

# ============================================================================
# REPORT GENERATION CONFIGURATION
# ============================================================================

# Set to 'true' to generate legacy Phase 4 reports (for QA comparison only)
# Set to 'false' for production (all reports from Phase 5)
# DEFAULT: false - Phase 5 handles all report generation as of 2025-12-05
GENERATE_PHASE4_REPORTS=false

# Set to 'true' to keep intermediate artifacts for debugging
# This includes phase outputs between stages for troubleshooting
KEEP_INTERMEDIATE_ARTIFACTS=false

# ============================================================================
# OUTPUT CONFIGURATION
# ============================================================================

# Output directory for generated reports (relative to project root)
OUTPUT_DIR=output

# Enable PDF rendering for reports (requires additional setup)
RENDER_PDF=false
