{
  "report_id": "managers_it_technology",
  "name": "IT & Technology Manager Report",
  "version": "1.0.0",
  "primary_audience": "manager_it_technology",
  "description": "Detailed report for IT and Technology managers with focus on Technology & Innovation, IT Infrastructure, Data Systems, and Cybersecurity.",
  "target_page_range": {
    "min": 10,
    "max": 15
  },
  "brand_config": {
    "primary_color": "#212653",
    "accent_color": "#969423",
    "font_heading": "Montserrat",
    "font_body": "Open Sans"
  },
  "default_tone_tags": ["technical", "tactical", "detailed"],
  "sections": [
    {
      "id": "department_overview",
      "title": "Technology & IT Overview",
      "description": "Performance summary for Technology and IT dimensions",
      "data_sources": [
        { "id": "tin_dim", "from": "dimensions[dimension_code=TIN]" },
        { "id": "ids_dim", "from": "dimensions[dimension_code=IDS]" }
      ],
      "visual_type": "score_tiles_row",
      "layout_hints": { "columns": 2 }
    },
    {
      "id": "technology_deep_dive",
      "title": "Technology & Innovation Assessment",
      "description": "Detailed analysis of technology adoption and innovation",
      "data_sources": [
        { "id": "dimension", "from": "dimensions[dimension_code=TIN]" },
        { "id": "sub_indicators", "from": "dimensions[dimension_code=TIN].sub_indicators" }
      ],
      "tone_tags": ["technical", "analytical"],
      "visual_type": "bar_chart",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "it_infrastructure_deep_dive",
      "title": "IT, Data & Systems Assessment",
      "description": "Detailed analysis of IT infrastructure, data management, and security",
      "data_sources": [
        { "id": "dimension", "from": "dimensions[dimension_code=IDS]" },
        { "id": "sub_indicators", "from": "dimensions[dimension_code=IDS].sub_indicators" }
      ],
      "tone_tags": ["technical", "analytical"],
      "visual_type": "bar_chart",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "cybersecurity_focus",
      "title": "Cybersecurity Assessment",
      "description": "Focus on security posture and data protection",
      "data_sources": [
        { "id": "ids_findings", "from": "findings", "filters": [{ "dimension_codes": ["IDS"] }] }
      ],
      "tone_tags": ["technical", "urgent"],
      "visual_type": "callout_box"
    },
    {
      "id": "findings",
      "title": "Technology Findings",
      "description": "Key insights from the technology assessment",
      "data_sources": [
        { "id": "tin_findings", "from": "findings", "filters": [{ "dimension_codes": ["TIN"] }] },
        { "id": "ids_findings", "from": "findings", "filters": [{ "dimension_codes": ["IDS"] }] }
      ],
      "tone_tags": ["analytical"],
      "visual_type": "bullet_list",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "risks",
      "title": "Technology Risks",
      "description": "Risks affecting technology and IT operations",
      "data_sources": [
        { "id": "risks", "from": "risks", "filters": [{ "dimension_codes": ["TIN", "IDS"] }] }
      ],
      "tone_tags": ["technical", "urgent"],
      "visual_type": "risk_matrix"
    },
    {
      "id": "recommendations",
      "title": "Technology Recommendations",
      "description": "Prioritized actions for technology improvement",
      "data_sources": [
        { "id": "recommendations", "from": "recommendations", "filters": [{ "dimension_codes": ["TIN", "IDS"] }], "sort": { "field": "priority_rank", "direction": "asc" } }
      ],
      "tone_tags": ["action_oriented", "technical"],
      "visual_type": "numbered_list",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "quick_wins",
      "title": "Quick Wins for IT",
      "description": "Immediate actions for technology improvement",
      "data_sources": [
        { "id": "recs", "from": "recommendations", "filters": [{ "dimension_codes": ["TIN", "IDS"] }, { "field": "horizon", "operator": "eq", "value": "90_days" }] }
      ],
      "tone_tags": ["action_oriented", "urgent"],
      "visual_type": "checklist"
    },
    {
      "id": "kpis",
      "title": "Technology KPIs",
      "description": "Key metrics to track",
      "data_sources": [
        { "id": "tin_dim", "from": "dimensions[dimension_code=TIN]" },
        { "id": "ids_dim", "from": "dimensions[dimension_code=IDS]" }
      ],
      "visual_type": "kpi_dashboard"
    }
  ],
  "visuals": {
    "version": "1.1.0",
    "schema_version": "2025-06-01",

    "global_settings": {
      "brand_colors": true,
      "accessibility_symbols": true,
      "print_optimized": true,
      "show_benchmarks": true,
      "style_modifiers": {
        "friendly_language": false,
        "celebratory_style": false,
        "action_oriented": true,
        "simple_style": false
      },
      "jsonpath_config": {
        "library": "jsonpath-plus",
        "strict_mode": false,
        "log_path_resolution": false,
        "null_handling": "use_default"
      }
    },

    "data_requirements": {
      "required_fields": [
        { "path": "$.dimensions[?(@.code=='TIN')]", "type": "object" },
        { "path": "$.dimensions[?(@.code=='IDS')]", "type": "object" }
      ],
      "optional_fields": [
        { "path": "$.risks[?(@.dimension_code=='TIN' || @.dimension_code=='IDS')]", "type": "array", "default": [] },
        { "path": "$.benchmark_data.industry_benchmark", "type": "object", "default": null, "hide_component_if_null": true }
      ],
      "validation_mode": "warn"
    },

    "print_configuration": {
      "stylesheet_reference": "/styles/print.css",
      "page_settings": {
        "size": "letter",
        "orientation": "portrait",
        "margins": { "top": "0.5in", "right": "0.5in", "bottom": "0.75in", "left": "0.5in" }
      },
      "component_rules": {
        "gauge": { "break_inside": "avoid", "print_size": "medium" },
        "score_tile": { "break_inside": "avoid", "print_size": "compact" },
        "table": { "break_inside": "avoid-page", "max_rows_per_page": 20, "repeat_header": true },
        "bar_chart": { "break_inside": "avoid", "print_grayscale_fallback": true },
        "radar_chart": { "break_inside": "avoid", "print_size": "medium" },
        "risk_matrix": { "break_inside": "avoid", "print_patterns": true },
        "kpi_dashboard": { "break_inside": "avoid", "print_columns": 2 }
      },
      "color_handling": {
        "force_color_print": true,
        "webkit_print_color_adjust": "exact",
        "fallback_patterns": true
      }
    },

    "performance_budgets": {
      "components": {
        "per_report": { "warning_threshold": 18, "error_threshold": 22, "action_on_exceed": "log_warning" },
        "per_section": { "warning_threshold": 6, "error_threshold": 8, "action_on_exceed": "log_warning" }
      },
      "rendering": {
        "target_time_ms": 2500,
        "warning_time_ms": 4000,
        "max_time_ms": 7000,
        "lazy_load_threshold": 15,
        "progressive_rendering": true
      },
      "output": {
        "max_file_size_kb": 1500,
        "warning_file_size_kb": 1200,
        "max_embedded_images": 12,
        "image_compression": "medium",
        "image_format": "png"
      },
      "validation": {
        "enforce_budgets": true,
        "log_violations": true,
        "fail_on_error_threshold": false,
        "include_in_report_metadata": true
      }
    },

    "benchmark_configuration": {
      "primary_source": "$.benchmark_data.industry_benchmark",
      "fallback_sources": ["$.benchmark_data.peer_comparison"],
      "fallback_display": {
        "text": "Benchmark unavailable",
        "show_placeholder": true,
        "hide_benchmark_components": false
      },
      "display_settings": {
        "show_percentile_rank": true,
        "benchmark_label": "Industry Avg",
        "delta_format": "+X% vs benchmark"
      },
      "comparison_type": "industry"
    },

    "accessibility_requirements": {
      "compliance_level": "WCAG_2.1_AA",
      "validation_required": true,
      "color_requirements": {
        "min_contrast_normal_text": 4.5,
        "colorblind_safe": true,
        "never_color_alone": true,
        "status_symbols": {
          "excellence": { "symbol": "✓", "aria_label": "Excellent" },
          "proficiency": { "symbol": "!", "aria_label": "Good" },
          "attention": { "symbol": "⚠", "aria_label": "Attention" },
          "critical": { "symbol": "✗", "aria_label": "Critical" }
        }
      },
      "screen_reader_requirements": {
        "all_charts_have_aria_label": true,
        "provide_data_tables_for_charts": true
      }
    },

    "components": [
      {
        "type": "gauge",
        "id": "resilience_gauge",
        "section": "department_overview",
        "order": 1,
        "config": { "size": "medium", "show_status": true, "show_benchmark": true },
        "data_binding": {
          "primary_path": "$.chapters[?(@.code=='RS')].score",
          "default_value": 0,
          "label": "Resilience & Safeguards Score",
          "benchmark_path": "$.benchmark_data.industry_benchmark.chapters.RS"
        },
        "conditional": { "render_if": "$.chapters[?(@.code=='RS')] != null" },
        "accessibility": { "aria_label": "Resilience score: {score}" }
      },
      {
        "type": "score_tile",
        "id": "tech_dimension_tiles",
        "section": "department_overview",
        "order": 2,
        "config": { "size": "compact", "show_trend": true, "show_benchmark": true },
        "data_binding": {
          "primary_path": "$.dimensions[?(@.code=='TIN' || @.code=='IDS' || @.code=='RMS' || @.code=='CMP')]",
          "default_value": []
        },
        "conditional": { "render_if": "true" },
        "accessibility": { "aria_label": "{dimension_name}: {score}" }
      },
      {
        "type": "radar_chart",
        "id": "resilience_radar",
        "section": "department_overview",
        "order": 3,
        "config": { "size": "medium", "show_benchmark": true, "max_dimensions": 4 },
        "data_binding": {
          "primary_path": "$.dimensions[?(@.code=='TIN' || @.code=='IDS' || @.code=='RMS' || @.code=='CMP')]",
          "default_value": []
        },
        "conditional": { "render_if": "true" },
        "accessibility": { "aria_label": "Technology resilience balance radar" }
      },
      {
        "type": "bar_chart",
        "id": "tin_sub_indicators",
        "section": "technology_deep_dive",
        "order": 1,
        "config": { "orientation": "horizontal", "sort_by": "score", "show_benchmark": true },
        "data_binding": {
          "primary_path": "$.dimensions[?(@.code=='TIN')].sub_indicators",
          "value_field": "score",
          "label_field": "name",
          "default_value": []
        },
        "conditional": { "render_if": "$.dimensions[?(@.code=='TIN')].sub_indicators.length > 0" },
        "accessibility": { "aria_label": "Technology & Innovation sub-indicator scores" }
      },
      {
        "type": "bar_chart",
        "id": "ids_sub_indicators",
        "section": "it_infrastructure_deep_dive",
        "order": 1,
        "config": { "orientation": "horizontal", "sort_by": "score", "show_benchmark": true },
        "data_binding": {
          "primary_path": "$.dimensions[?(@.code=='IDS')].sub_indicators",
          "value_field": "score",
          "label_field": "name",
          "default_value": []
        },
        "conditional": { "render_if": "$.dimensions[?(@.code=='IDS')].sub_indicators.length > 0" },
        "accessibility": { "aria_label": "IT, Data & Systems sub-indicator scores" }
      },
      {
        "type": "risk_matrix",
        "id": "cybersecurity_risks",
        "section": "risks",
        "order": 1,
        "config": { "show_legend": true, "show_labels": true },
        "data_binding": {
          "primary_path": "$.risks[?(@.dimension_code=='TIN' || @.dimension_code=='IDS')]",
          "default_value": []
        },
        "conditional": {
          "render_if": "$.risks[?(@.dimension_code=='TIN' || @.dimension_code=='IDS')].length > 0",
          "fallback_message": "No significant technology risks identified"
        },
        "accessibility": { "aria_label": "Technology risk matrix" }
      },
      {
        "type": "kpi_dashboard",
        "id": "technology_kpis",
        "section": "kpis",
        "order": 1,
        "config": { "columns": 2, "metrics_count": 8 },
        "data_binding": {
          "metrics": [
            { "label": "Tech & Innovation", "path": "$.dimensions[?(@.code=='TIN')].score", "default": "N/A" },
            { "label": "IT, Data & Systems", "path": "$.dimensions[?(@.code=='IDS')].score", "default": "N/A" },
            { "label": "Risk Management", "path": "$.dimensions[?(@.code=='RMS')].score", "default": "N/A" },
            { "label": "Compliance", "path": "$.dimensions[?(@.code=='CMP')].score", "default": "N/A" },
            { "label": "Tech Risks", "path": "$.risks[?(@.dimension_code=='TIN' || @.dimension_code=='IDS')].length", "default": 0 },
            { "label": "Open Actions", "path": "$.recommendations[?(@.dimension_code=='TIN' || @.dimension_code=='IDS')].length", "default": 0 },
            { "label": "Strengths", "path": "$.findings[?(@.type=='strength' && (@.dimension_code=='TIN' || @.dimension_code=='IDS'))].length", "default": 0 },
            { "label": "Gaps", "path": "$.findings[?(@.type=='gap' && (@.dimension_code=='TIN' || @.dimension_code=='IDS'))].length", "default": 0 }
          ]
        },
        "conditional": { "render_if": "true" },
        "accessibility": { "aria_label": "Technology KPIs" }
      }
    ]
  }
}
