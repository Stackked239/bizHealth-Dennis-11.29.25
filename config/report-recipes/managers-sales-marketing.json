{
  "report_id": "managers_sales_marketing",
  "name": "Sales & Marketing Manager Report",
  "version": "1.0.0",
  "primary_audience": "manager_sales_marketing",
  "description": "Detailed report for Sales and Marketing managers with focus on Strategy, Sales, Marketing, and Customer Experience dimensions.",
  "target_page_range": {
    "min": 10,
    "max": 15
  },
  "brand_config": {
    "primary_color": "#212653",
    "accent_color": "#969423",
    "font_heading": "Montserrat",
    "font_body": "Open Sans"
  },
  "default_tone_tags": ["tactical", "action_oriented", "detailed"],
  "sections": [
    {
      "id": "department_overview",
      "title": "Revenue Engine Overview",
      "description": "Performance summary for Growth Engine chapter",
      "data_sources": [
        { "id": "chapter", "from": "chapters[chapter_code=GE]" },
        { "id": "dimensions", "from": "dimensions", "filters": [{ "dimension_codes": ["STR", "SAL", "MKT", "CXP"] }] }
      ],
      "visual_type": "score_tiles_row",
      "layout_hints": { "columns": 4 }
    },
    {
      "id": "strategy_deep_dive",
      "title": "Strategy Assessment",
      "description": "Detailed analysis of strategic positioning and planning",
      "data_sources": [
        { "id": "dimension", "from": "dimensions[dimension_code=STR]" },
        { "id": "sub_indicators", "from": "dimensions[dimension_code=STR].sub_indicators" },
        { "id": "findings", "from": "findings", "filters": [{ "dimension_codes": ["STR"] }] }
      ],
      "tone_tags": ["analytical", "strategic"],
      "visual_type": "bar_chart",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "sales_deep_dive",
      "title": "Sales Performance",
      "description": "Detailed analysis of sales effectiveness and pipeline",
      "data_sources": [
        { "id": "dimension", "from": "dimensions[dimension_code=SAL]" },
        { "id": "sub_indicators", "from": "dimensions[dimension_code=SAL].sub_indicators" },
        { "id": "findings", "from": "findings", "filters": [{ "dimension_codes": ["SAL"] }] }
      ],
      "tone_tags": ["tactical", "analytical"],
      "visual_type": "bar_chart",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "marketing_deep_dive",
      "title": "Marketing Effectiveness",
      "description": "Detailed analysis of brand, acquisition, and ROI",
      "data_sources": [
        { "id": "dimension", "from": "dimensions[dimension_code=MKT]" },
        { "id": "sub_indicators", "from": "dimensions[dimension_code=MKT].sub_indicators" },
        { "id": "findings", "from": "findings", "filters": [{ "dimension_codes": ["MKT"] }] }
      ],
      "tone_tags": ["tactical", "analytical"],
      "visual_type": "bar_chart",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "cxp_deep_dive",
      "title": "Customer Experience",
      "description": "Detailed analysis of customer satisfaction and retention",
      "data_sources": [
        { "id": "dimension", "from": "dimensions[dimension_code=CXP]" },
        { "id": "sub_indicators", "from": "dimensions[dimension_code=CXP].sub_indicators" },
        { "id": "findings", "from": "findings", "filters": [{ "dimension_codes": ["CXP"] }] }
      ],
      "tone_tags": ["tactical", "analytical"],
      "visual_type": "bar_chart",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "department_recommendations",
      "title": "Sales & Marketing Recommendations",
      "description": "Prioritized actions for your department",
      "data_sources": [
        { "id": "recommendations", "from": "recommendations", "filters": [{ "dimension_codes": ["STR", "SAL", "MKT", "CXP"] }], "sort": { "field": "priority_rank", "direction": "asc" } }
      ],
      "tone_tags": ["action_oriented", "tactical"],
      "visual_type": "numbered_list",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "quick_wins",
      "title": "Quick Wins for Your Team",
      "description": "Immediate actions your team can take",
      "data_sources": [
        { "id": "quick_wins", "from": "quick_wins" },
        { "id": "recs", "from": "recommendations", "filters": [{ "dimension_codes": ["STR", "SAL", "MKT", "CXP"] }, { "field": "horizon", "operator": "eq", "value": "90_days" }] }
      ],
      "tone_tags": ["action_oriented", "urgent"],
      "visual_type": "checklist"
    },
    {
      "id": "kpis",
      "title": "Key Performance Indicators",
      "description": "Metrics to track for improvement",
      "data_sources": [
        { "id": "dimensions", "from": "dimensions", "filters": [{ "dimension_codes": ["STR", "SAL", "MKT", "CXP"] }] }
      ],
      "tone_tags": ["analytical", "tactical"],
      "visual_type": "kpi_dashboard"
    }
  ],
  "visuals": {
    "version": "1.1.0",
    "schema_version": "2025-06-01",

    "global_settings": {
      "brand_colors": true,
      "accessibility_symbols": true,
      "print_optimized": true,
      "show_benchmarks": true,
      "style_modifiers": {
        "friendly_language": false,
        "celebratory_style": false,
        "action_oriented": true,
        "simple_style": false
      },
      "jsonpath_config": {
        "library": "jsonpath-plus",
        "strict_mode": false,
        "log_path_resolution": false,
        "null_handling": "use_default"
      }
    },

    "data_requirements": {
      "required_fields": [
        { "path": "$.chapters[?(@.code=='GE')]", "type": "object" },
        { "path": "$.dimensions", "type": "array", "min_length": 4 }
      ],
      "optional_fields": [
        { "path": "$.quick_wins", "type": "array", "default": [], "min_items_to_render": 1 },
        { "path": "$.benchmark_data.industry_benchmark", "type": "object", "default": null, "hide_component_if_null": true }
      ],
      "validation_mode": "warn"
    },

    "print_configuration": {
      "stylesheet_reference": "/styles/print.css",
      "page_settings": {
        "size": "letter",
        "orientation": "portrait",
        "margins": { "top": "0.5in", "right": "0.5in", "bottom": "0.75in", "left": "0.5in" }
      },
      "component_rules": {
        "gauge": { "break_inside": "avoid", "print_size": "medium" },
        "score_tile": { "break_inside": "avoid", "print_size": "compact" },
        "table": { "break_inside": "avoid-page", "max_rows_per_page": 20, "repeat_header": true },
        "bar_chart": { "break_inside": "avoid", "print_grayscale_fallback": true },
        "radar_chart": { "break_inside": "avoid", "print_size": "medium" },
        "funnel": { "break_inside": "avoid", "print_labels": true },
        "timeline": { "break_inside": "avoid" },
        "kpi_dashboard": { "break_inside": "avoid", "print_columns": 2 },
        "action_card": { "break_inside": "avoid", "max_per_page": 4 }
      },
      "color_handling": {
        "force_color_print": true,
        "webkit_print_color_adjust": "exact",
        "fallback_patterns": true
      }
    },

    "performance_budgets": {
      "components": {
        "per_report": { "warning_threshold": 18, "error_threshold": 22, "action_on_exceed": "log_warning" },
        "per_section": { "warning_threshold": 6, "error_threshold": 8, "action_on_exceed": "log_warning" }
      },
      "rendering": {
        "target_time_ms": 2500,
        "warning_time_ms": 4000,
        "max_time_ms": 7000,
        "lazy_load_threshold": 15,
        "progressive_rendering": true
      },
      "output": {
        "max_file_size_kb": 1500,
        "warning_file_size_kb": 1200,
        "max_embedded_images": 12,
        "image_compression": "medium",
        "image_format": "png"
      },
      "validation": {
        "enforce_budgets": true,
        "log_violations": true,
        "fail_on_error_threshold": false,
        "include_in_report_metadata": true
      }
    },

    "benchmark_configuration": {
      "primary_source": "$.benchmark_data.industry_benchmark",
      "fallback_sources": ["$.benchmark_data.peer_comparison"],
      "fallback_display": {
        "text": "Benchmark unavailable",
        "show_placeholder": true,
        "hide_benchmark_components": false
      },
      "display_settings": {
        "show_percentile_rank": true,
        "benchmark_label": "Industry Avg",
        "delta_format": "+X% vs benchmark"
      },
      "comparison_type": "industry"
    },

    "accessibility_requirements": {
      "compliance_level": "WCAG_2.1_AA",
      "validation_required": true,
      "validation_tools": ["axe-core"],
      "color_requirements": {
        "min_contrast_normal_text": 4.5,
        "colorblind_safe": true,
        "never_color_alone": true,
        "status_symbols": {
          "excellence": { "symbol": "✓", "aria_label": "Excellent" },
          "proficiency": { "symbol": "!", "aria_label": "Good" },
          "attention": { "symbol": "⚠", "aria_label": "Attention" },
          "critical": { "symbol": "✗", "aria_label": "Critical" }
        }
      },
      "screen_reader_requirements": {
        "all_charts_have_aria_label": true,
        "provide_data_tables_for_charts": true
      }
    },

    "components": [
      {
        "type": "gauge",
        "id": "growth_engine_gauge",
        "section": "department_overview",
        "order": 1,
        "config": { "size": "medium", "show_status": true, "show_benchmark": true },
        "data_binding": {
          "primary_path": "$.chapters[?(@.code=='GE')].score",
          "fallback_path": "$.chapters[0].score",
          "default_value": 0,
          "label": "Growth Engine Score",
          "benchmark_path": "$.benchmark_data.industry_benchmark.chapters.GE"
        },
        "conditional": { "render_if": "$.chapters[?(@.code=='GE')] != null" },
        "accessibility": { "aria_label": "Growth Engine score: {score}" }
      },
      {
        "type": "score_tile",
        "id": "dimension_tiles",
        "section": "department_overview",
        "order": 2,
        "config": { "size": "compact", "show_trend": true, "show_benchmark": true },
        "data_binding": {
          "primary_path": "$.dimensions[?(@.code=='STR' || @.code=='SAL' || @.code=='MKT' || @.code=='CXP')]",
          "default_value": []
        },
        "conditional": { "render_if": "true" },
        "accessibility": { "aria_label": "{dimension_name}: {score}" }
      },
      {
        "type": "radar_chart",
        "id": "growth_engine_radar",
        "section": "department_overview",
        "order": 3,
        "config": { "size": "medium", "show_benchmark": true, "max_dimensions": 4 },
        "data_binding": {
          "primary_path": "$.dimensions[?(@.code=='STR' || @.code=='SAL' || @.code=='MKT' || @.code=='CXP')]",
          "default_value": []
        },
        "conditional": { "render_if": "true" },
        "accessibility": { "aria_label": "Growth Engine balance radar" }
      },
      {
        "type": "bar_chart",
        "id": "sales_sub_indicators",
        "section": "sales_deep_dive",
        "order": 1,
        "config": { "orientation": "horizontal", "sort_by": "score", "show_benchmark": true },
        "data_binding": {
          "primary_path": "$.dimensions[?(@.code=='SAL')].sub_indicators",
          "value_field": "score",
          "label_field": "name",
          "default_value": []
        },
        "conditional": { "render_if": "$.dimensions[?(@.code=='SAL')].sub_indicators.length > 0" },
        "accessibility": { "aria_label": "Sales sub-indicator scores" }
      },
      {
        "type": "funnel",
        "id": "sales_funnel",
        "section": "sales_deep_dive",
        "order": 2,
        "config": { "show_conversion_rates": true, "show_labels": true },
        "data_binding": {
          "primary_path": "$.dimensions[?(@.code=='SAL')].funnel_data",
          "fallback_path": null,
          "default_value": null
        },
        "conditional": {
          "render_if": "$.dimensions[?(@.code=='SAL')].funnel_data != null",
          "fallback_message": "Sales funnel data not available"
        },
        "accessibility": { "aria_label": "Sales pipeline funnel" }
      },
      {
        "type": "timeline",
        "id": "revenue_initiatives",
        "section": "department_recommendations",
        "order": 2,
        "config": { "orientation": "horizontal", "show_milestones": true },
        "data_binding": {
          "primary_path": "$.recommendations[?(@.dimension_code=='STR' || @.dimension_code=='SAL' || @.dimension_code=='MKT' || @.dimension_code=='CXP')]",
          "default_value": []
        },
        "conditional": { "render_if": "true" },
        "accessibility": { "aria_label": "Revenue initiative timeline" }
      },
      {
        "type": "kpi_dashboard",
        "id": "sales_marketing_kpis",
        "section": "kpis",
        "order": 1,
        "config": { "columns": 2, "metrics_count": 8 },
        "data_binding": {
          "metrics": [
            { "label": "Strategy Score", "path": "$.dimensions[?(@.code=='STR')].score", "default": "N/A" },
            { "label": "Sales Score", "path": "$.dimensions[?(@.code=='SAL')].score", "default": "N/A" },
            { "label": "Marketing Score", "path": "$.dimensions[?(@.code=='MKT')].score", "default": "N/A" },
            { "label": "CX Score", "path": "$.dimensions[?(@.code=='CXP')].score", "default": "N/A" },
            { "label": "Open Actions", "path": "$.recommendations[?(@.dimension_code=='STR' || @.dimension_code=='SAL' || @.dimension_code=='MKT' || @.dimension_code=='CXP')].length", "default": 0 },
            { "label": "Quick Wins", "path": "$.quick_wins.length", "default": 0 },
            { "label": "Strengths", "path": "$.findings[?(@.type=='strength' && (@.dimension_code=='STR' || @.dimension_code=='SAL'))].length", "default": 0 },
            { "label": "Gaps", "path": "$.findings[?(@.type=='gap' && (@.dimension_code=='STR' || @.dimension_code=='SAL'))].length", "default": 0 }
          ]
        },
        "conditional": { "render_if": "true" },
        "accessibility": { "aria_label": "Sales & Marketing KPIs" }
      },
      {
        "type": "action_card",
        "id": "quick_wins",
        "section": "quick_wins",
        "order": 1,
        "config": { "variant": "compact", "show_steps": false, "max_items": 5 },
        "data_binding": {
          "primary_path": "$.quick_wins",
          "default_value": []
        },
        "conditional": {
          "render_if": "$.quick_wins.length > 0",
          "fallback_message": "Quick wins analysis in progress"
        },
        "accessibility": { "aria_label": "Quick win: {title}" }
      }
    ]
  }
}
