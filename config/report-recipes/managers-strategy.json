{
  "report_id": "managers_strategy",
  "name": "Strategy & Planning Manager Report",
  "version": "1.0.0",
  "primary_audience": "manager_strategy",
  "description": "Detailed report for Strategy and Planning managers with focus on strategic positioning, risk management, compliance, and leadership alignment.",
  "target_page_range": {
    "min": 10,
    "max": 15
  },
  "brand_config": {
    "primary_color": "#212653",
    "accent_color": "#969423",
    "font_heading": "Montserrat",
    "font_body": "Open Sans"
  },
  "default_tone_tags": ["strategic", "analytical", "detailed"],
  "sections": [
    {
      "id": "department_overview",
      "title": "Strategic Overview",
      "description": "Cross-functional performance summary",
      "data_sources": [
        { "id": "chapters", "from": "chapters" },
        { "id": "overall_score", "from": "scores_summary" }
      ],
      "visual_type": "radar_chart"
    },
    {
      "id": "strategy_deep_dive",
      "title": "Strategy Assessment",
      "description": "Detailed analysis of strategic planning and positioning",
      "data_sources": [
        { "id": "dimension", "from": "dimensions[dimension_code=STR]" },
        { "id": "sub_indicators", "from": "dimensions[dimension_code=STR].sub_indicators" }
      ],
      "tone_tags": ["strategic", "analytical"],
      "visual_type": "bar_chart",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "leadership_alignment",
      "title": "Leadership & Governance Assessment",
      "description": "Analysis of leadership effectiveness and governance",
      "data_sources": [
        { "id": "dimension", "from": "dimensions[dimension_code=LDG]" },
        { "id": "sub_indicators", "from": "dimensions[dimension_code=LDG].sub_indicators" }
      ],
      "tone_tags": ["strategic", "analytical"],
      "visual_type": "bar_chart",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "risk_management",
      "title": "Risk Management Assessment",
      "description": "Analysis of risk identification and mitigation capabilities",
      "data_sources": [
        { "id": "dimension", "from": "dimensions[dimension_code=RMS]" },
        { "id": "sub_indicators", "from": "dimensions[dimension_code=RMS].sub_indicators" }
      ],
      "tone_tags": ["analytical", "detailed"],
      "visual_type": "bar_chart",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "compliance",
      "title": "Compliance Assessment",
      "description": "Analysis of regulatory compliance and policy adherence",
      "data_sources": [
        { "id": "dimension", "from": "dimensions[dimension_code=CMP]" },
        { "id": "sub_indicators", "from": "dimensions[dimension_code=CMP].sub_indicators" }
      ],
      "tone_tags": ["analytical", "detailed"],
      "visual_type": "bar_chart",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "cross_dimensional_findings",
      "title": "Cross-Dimensional Findings",
      "description": "Strategic insights across all dimensions",
      "data_sources": [
        { "id": "findings", "from": "findings", "filters": [{ "dimension_codes": ["STR", "LDG", "RMS", "CMP"] }] }
      ],
      "tone_tags": ["strategic", "analytical"],
      "visual_type": "bullet_list"
    },
    {
      "id": "enterprise_risks",
      "title": "Enterprise Risk Register",
      "description": "Comprehensive view of business risks",
      "data_sources": [
        { "id": "all_risks", "from": "risks", "sort": { "field": "severity", "direction": "desc" } }
      ],
      "tone_tags": ["strategic", "urgent"],
      "visual_type": "risk_matrix",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "recommendations",
      "title": "Strategic Recommendations",
      "description": "Prioritized strategic actions",
      "data_sources": [
        { "id": "recommendations", "from": "recommendations", "filters": [{ "dimension_codes": ["STR", "LDG", "RMS", "CMP"] }], "sort": { "field": "priority_rank", "direction": "asc" } }
      ],
      "tone_tags": ["action_oriented", "strategic"],
      "visual_type": "numbered_list",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "roadmap_detail",
      "title": "Implementation Roadmap",
      "description": "Detailed phased implementation plan",
      "data_sources": [
        { "id": "roadmap", "from": "roadmap.phases" },
        { "id": "recommendations", "from": "recommendations" }
      ],
      "tone_tags": ["strategic"],
      "visual_type": "roadmap_timeline",
      "layout_hints": { "page_break_before": true }
    },
    {
      "id": "kpis",
      "title": "Strategic KPIs",
      "description": "Key metrics for strategic monitoring",
      "data_sources": [
        { "id": "dimensions", "from": "dimensions", "filters": [{ "dimension_codes": ["STR", "LDG", "RMS", "CMP"] }] }
      ],
      "visual_type": "kpi_dashboard"
    }
  ],
  "visuals": {
    "version": "1.1.0",
    "schema_version": "2025-06-01",

    "global_settings": {
      "brand_colors": true,
      "accessibility_symbols": true,
      "print_optimized": true,
      "show_benchmarks": true,
      "style_modifiers": {
        "friendly_language": false,
        "celebratory_style": false,
        "action_oriented": true,
        "simple_style": false
      },
      "jsonpath_config": {
        "library": "jsonpath-plus",
        "strict_mode": false,
        "log_path_resolution": false,
        "null_handling": "use_default"
      }
    },

    "data_requirements": {
      "required_fields": [
        { "path": "$.chapters", "type": "array", "min_length": 4 },
        { "path": "$.scores_summary.overall_health_score", "type": "number" }
      ],
      "optional_fields": [
        { "path": "$.roadmap.phases", "type": "array", "default": [] },
        { "path": "$.risks", "type": "array", "default": [] },
        { "path": "$.benchmark_data.industry_benchmark", "type": "object", "default": null, "hide_component_if_null": true }
      ],
      "validation_mode": "warn"
    },

    "print_configuration": {
      "stylesheet_reference": "/styles/print.css",
      "page_settings": {
        "size": "letter",
        "orientation": "portrait",
        "margins": { "top": "0.5in", "right": "0.5in", "bottom": "0.75in", "left": "0.5in" }
      },
      "component_rules": {
        "gauge": { "break_inside": "avoid", "print_size": "medium" },
        "score_tile": { "break_inside": "avoid", "print_size": "compact" },
        "table": { "break_inside": "avoid-page", "max_rows_per_page": 20, "repeat_header": true },
        "bar_chart": { "break_inside": "avoid", "print_grayscale_fallback": true },
        "radar_chart": { "break_inside": "avoid", "print_size": "medium" },
        "risk_matrix": { "break_inside": "avoid", "print_patterns": true },
        "roadmap_timeline": { "break_before": "page", "print_orientation": "landscape_if_wide" },
        "kpi_dashboard": { "break_inside": "avoid", "print_columns": 2 }
      },
      "color_handling": {
        "force_color_print": true,
        "webkit_print_color_adjust": "exact",
        "fallback_patterns": true
      }
    },

    "performance_budgets": {
      "components": {
        "per_report": { "warning_threshold": 15, "error_threshold": 18, "action_on_exceed": "log_warning" },
        "per_section": { "warning_threshold": 5, "error_threshold": 7, "action_on_exceed": "log_warning" }
      },
      "rendering": {
        "target_time_ms": 2500,
        "warning_time_ms": 4000,
        "max_time_ms": 7000,
        "lazy_load_threshold": 12,
        "progressive_rendering": true
      },
      "output": {
        "max_file_size_kb": 1500,
        "warning_file_size_kb": 1200,
        "max_embedded_images": 12,
        "image_compression": "medium",
        "image_format": "png"
      },
      "validation": {
        "enforce_budgets": true,
        "log_violations": true,
        "fail_on_error_threshold": false,
        "include_in_report_metadata": true
      }
    },

    "benchmark_configuration": {
      "primary_source": "$.benchmark_data.industry_benchmark",
      "fallback_sources": ["$.benchmark_data.peer_comparison"],
      "fallback_display": {
        "text": "Benchmark unavailable",
        "show_placeholder": true,
        "hide_benchmark_components": false
      },
      "display_settings": {
        "show_percentile_rank": true,
        "benchmark_label": "Industry Avg",
        "delta_format": "+X% vs benchmark"
      },
      "comparison_type": "industry"
    },

    "accessibility_requirements": {
      "compliance_level": "WCAG_2.1_AA",
      "validation_required": true,
      "color_requirements": {
        "min_contrast_normal_text": 4.5,
        "colorblind_safe": true,
        "never_color_alone": true,
        "status_symbols": {
          "excellence": { "symbol": "✓", "aria_label": "Excellent" },
          "proficiency": { "symbol": "!", "aria_label": "Good" },
          "attention": { "symbol": "⚠", "aria_label": "Attention" },
          "critical": { "symbol": "✗", "aria_label": "Critical" }
        }
      },
      "screen_reader_requirements": {
        "all_charts_have_aria_label": true,
        "provide_data_tables_for_charts": true
      }
    },

    "components": [
      {
        "type": "gauge",
        "id": "overall_health_gauge",
        "section": "department_overview",
        "order": 1,
        "config": { "size": "medium", "show_status": true, "show_benchmark": true },
        "data_binding": {
          "primary_path": "$.scores_summary.overall_health_score",
          "default_value": 0,
          "label": "Overall Business Health",
          "benchmark_path": "$.benchmark_data.industry_benchmark.overall"
        },
        "conditional": { "render_if": "$.scores_summary.overall_health_score != null" },
        "accessibility": { "aria_label": "Overall health score: {score}" }
      },
      {
        "type": "radar_chart",
        "id": "chapter_balance_radar",
        "section": "department_overview",
        "order": 2,
        "config": { "size": "large", "show_benchmark": true, "max_dimensions": 4 },
        "data_binding": {
          "primary_path": "$.chapters",
          "default_value": []
        },
        "conditional": { "render_if": "$.chapters.length > 0" },
        "accessibility": { "aria_label": "Business health balance across chapters" }
      },
      {
        "type": "score_tile",
        "id": "strategy_tiles",
        "section": "department_overview",
        "order": 3,
        "config": { "size": "compact", "show_trend": true, "show_benchmark": true },
        "data_binding": {
          "primary_path": "$.dimensions[?(@.code=='STR' || @.code=='LDG' || @.code=='RMS' || @.code=='CMP')]",
          "default_value": []
        },
        "conditional": { "render_if": "true" },
        "accessibility": { "aria_label": "{dimension_name}: {score}" }
      },
      {
        "type": "bar_chart",
        "id": "str_sub_indicators",
        "section": "strategy_deep_dive",
        "order": 1,
        "config": { "orientation": "horizontal", "sort_by": "score", "show_benchmark": true },
        "data_binding": {
          "primary_path": "$.dimensions[?(@.code=='STR')].sub_indicators",
          "value_field": "score",
          "label_field": "name",
          "default_value": []
        },
        "conditional": { "render_if": "$.dimensions[?(@.code=='STR')].sub_indicators.length > 0" },
        "accessibility": { "aria_label": "Strategy sub-indicator scores" }
      },
      {
        "type": "risk_matrix",
        "id": "enterprise_risks",
        "section": "enterprise_risks",
        "order": 1,
        "config": { "show_legend": true, "show_labels": true },
        "data_binding": {
          "primary_path": "$.risks",
          "default_value": []
        },
        "conditional": {
          "render_if": "$.risks.length > 0",
          "fallback_message": "No significant enterprise risks identified"
        },
        "accessibility": { "aria_label": "Enterprise risk matrix with {count} risks" }
      },
      {
        "type": "roadmap_timeline",
        "id": "implementation_roadmap",
        "section": "roadmap_detail",
        "order": 1,
        "config": { "show_milestones": true, "show_investment": true },
        "data_binding": {
          "primary_path": "$.roadmap.phases",
          "timeline_months_path": "$.roadmap.overall_timeline_months",
          "default_value": []
        },
        "conditional": {
          "render_if": "$.roadmap.phases.length > 0",
          "fallback_message": "Implementation roadmap in development"
        },
        "accessibility": { "aria_label": "Strategic implementation roadmap" }
      },
      {
        "type": "kpi_dashboard",
        "id": "strategy_kpis",
        "section": "kpis",
        "order": 1,
        "config": { "columns": 2, "metrics_count": 8 },
        "data_binding": {
          "metrics": [
            { "label": "Strategy Score", "path": "$.dimensions[?(@.code=='STR')].score", "default": "N/A" },
            { "label": "Leadership Score", "path": "$.dimensions[?(@.code=='LDG')].score", "default": "N/A" },
            { "label": "Risk Mgmt Score", "path": "$.dimensions[?(@.code=='RMS')].score", "default": "N/A" },
            { "label": "Compliance Score", "path": "$.dimensions[?(@.code=='CMP')].score", "default": "N/A" },
            { "label": "Total Risks", "path": "$.risks.length", "default": 0 },
            { "label": "Strategic Actions", "path": "$.recommendations[?(@.dimension_code=='STR')].length", "default": 0 },
            { "label": "Timeline", "path": "$.roadmap.overall_timeline_months", "default": "TBD", "suffix": " months" },
            { "label": "Est. Investment", "path": "$.roadmap.total_estimated_investment", "default": "TBD", "prefix": "$" }
          ]
        },
        "conditional": { "render_if": "true" },
        "accessibility": { "aria_label": "Strategic KPIs" }
      }
    ]
  }
}
